- @receipts.each do |receipt|
  - message = receipt.message
  .media
    .media-left
      / user avators can go here
      %a{:href => "#"}
        %img.media-object{:src => "https://api.adorable.io/avatars/64/#{message.sender.id}"}/
    .media-body
      %h4.media-heading
        = message.sender.email
        %br/
        %small
          %b Subject:
          = message.subject
        %br/
        %small
          %b Date:
          = message.created_at.strftime("%A, %b %d, %Y at %I:%M%p")
      = message.body